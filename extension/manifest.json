{
    "manifest_version": 3,
    "name": "GlitchDraft",
    "version": "1.1",
    "key": "",
    "description": "Save draft messages, including text and images, for specific chat threads to send later. Supports multiple messaging platforms.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://firestore.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.messenger.com/*",
                "*://*.facebook.com/messages/t/*",
                "*://*.discord.com/channels/*",
                "*://web.whatsapp.com/*",
                "*://*.hostseba.com/register.php*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_title": "GlitchDraft",
        "default_icon": "icons/icon128.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}